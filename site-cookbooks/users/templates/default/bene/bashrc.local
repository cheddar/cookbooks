# ruby/rails shortcuts
alias b="bundle"
alias be="bundle exec"
alias brs="bundle exec rails server"
alias con="bundle exec rails console"

# chef helper
alias kcu="knife cookbook upload"

# always use system ruby to start vim
vim() {
	rvm system exec vim "$@"
}

# host shortcuts
remote_tmux() {
	ssh -XY -D $2 -t $1 /bin/bash -li -c 'T'
}

wake() {
	case "$1" in
	chaos)
		wakeonlan 8C:89:A5:C1:66:27
		;;
	esac
}

function C() {
	wake chaos
	remote_tmux home.xnull.de
}

function Z() {
	remote_tmux bene.dev.zenops.net 9991
}

# gentoo development
export ECHANGELOG_USER="Benedikt BÃ¶hm <hollow@gentoo.org>"

repm() {
	repoman manifest
}

reps() {
	repm
	repoman scan
}

repf() {
	repm
	repoman full
}

# zentoo development
geix() {
	local base=~/projects/zentoo/zentoo
	pushd ${base} >/dev/null
	env \
		PORTDIR=${base}/cache/gentoo-portage/ \
		PORTAGE_PROFILE=${base}/cache/gentoo-portage/profiles/default/linux/amd64/13.0 \
		eix --cache-file ./eix.cache.gentoo "$@"
	popd >/dev/null
}

