###############################################################################
# COMMANDS.CFG - COMMAND DEFINITIONS
###############################################################################

# notification commands
define command {
  command_name notify-host
  command_line $USER1$/notify host
}

define command {
  command_name notify-service
  command_line $USER1$/notify service
}


# service commands
define command {
  command_name check_host_alive
  command_line $USER1$/check_ping -H $HOSTADDRESS$ -w 2000.0,80% -c 3000.0,100% -p 1
}

define command {
  command_name check_ping
  command_line $USER1$/check_ping -H $HOSTADDRESS$ -w $ARG1$ -c $ARG2$ -p 5
}

define command {
  command_name check_nrpe
  command_line $USER1$/check_nrpe -H $HOSTADDRESS$ -c $ARG1$ -t 60
}

define command {
  command_name check_http
  command_line $USER1$/check_http -H $HOSTADDRESS$ $ARG1$
}

# event handlers
define command {
  command_name submit_check_result
  command_line $USER1$/queue_check_result $HOSTNAME$ '$SERVICEDESC$' $SERVICESTATE$ '$SERVICEOUTPUT$'
}

# TODO: these should be defined in cookbooks
define command {
  command_name check_ssh
  command_line $USER1$/check_ssh -p $ARG1$ $HOSTADDRESS$
}

define command {
  command_name check_smtp
  command_line $USER1$/check_smtp -H $HOSTADDRESS$ -p $ARG1$ -t $ARG2$
}

# perfdata commands
define command {
  command_name process-host-perfdata
  command_line /usr/bin/printf "%b" "$TIMET$ src_host=\"$HOSTNAME$\" perfdata=\"HOSTPERFDATA\" hoststate=\"$HOSTSTATE$\" attempt=\"$HOSTATTEMPT$\" statetype=\"$HOSTSTATETYPE$\" executiontime=\"$HOSTEXECUTIONTIME$\" reason=\"$HOSTOUTPUT$\" result=\"$HOSTPERFDATA$\"\n" >> /var/nagios/host-perfdata
}

define command {
  command_name process-service-perfdata
  command_line    /usr/bin/printf "%b" "$TIMET$ src_host=\"$HOSTNAME$\" perfdata=\"SERVICEPERFDATA\" name=\"$SERVICEDESC$\" severity=\"$SERVICESTATE$\" attempt=\"$SERVICEATTEMPT$\" statetype=\"$SERVICESTATETYPE$\" executiontime=\"$SERVICEEXECUTIONTIME$\" latency=\"$SERVICELATENCY$\" reason=\"$SERVICEOUTPUT$\" result=\"$SERVICEPERFDATA$\"\n" >> /var/nagios/service-perfdata
}

define command {
  command_name process-host-perfdata-file
  command_line /bin/cat /dev/null > /var/nagios/host-perfdata
}

define command {
  command_name process-service-perfdata-file
  command_line /bin/cat /dev/null > /var/nagios/service-perfdata
}
