###############################################################################
# CONTACTS.CFG - CONTACTS & CONTACT GROUPS
###############################################################################

define contact {
  use generic-contact
  contact_name on-call
  alias on-call
  email <%= node[:contacts][:hostmaster] %>
  contactgroups on-call
  service_notification_period 24x7
  host_notification_period 24x7
}

define contactgroup {
  contactgroup_name on-call
  alias on-call
}
