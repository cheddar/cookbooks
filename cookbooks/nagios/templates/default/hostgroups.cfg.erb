###############################################################################
# HOSTGROUPS.CFG - HOST GROUP OBJECTS
###############################################################################

<% @hostgroups.sort_by {|name, hosts| name }.each do |name, hosts| %>
<% unless hosts.empty? %>
define hostgroup {
  hostgroup_name <%= name %>
  alias <%= name %>
  members <%= hosts.join(",") %>
}

<% end %>
<% end %>
