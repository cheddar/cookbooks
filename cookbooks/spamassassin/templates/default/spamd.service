[Unit]
Description=Spamassassin Daemon
After=network.target

[Service]
ExecStart=/usr/bin/spamd --create-prefs --max-children 5 --username spamd --helper-home-dir /var/lib/spamassassin -A 127.0.0.1 -A <%= node[:bind_ipaddress] %>
ExecReload=/bin/kill -HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
