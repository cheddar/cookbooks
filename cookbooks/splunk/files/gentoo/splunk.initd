depend() {
	after logger
}

start() {
	ebegin "Starting Splunk"
	/opt/splunk/bin/splunk start --answer-yes --no-prompt --accept-license
	eend $?
}

stop() {
	ebegin "Stopping Splunk"
	/opt/splunk/bin/splunk stop
	eend $?
}
