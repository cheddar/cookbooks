<view template="dashboard.html">
  <label>Browse Metrics</label>
  <module name="AccountBar" layoutPanel="appHeader"/>
  <module name="AppBar" layoutPanel="navigationHeader"/>
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>

  <module name="SearchSelectLister" layoutPanel="panel_row1_col1" group="Histograms">
    <param name="settingToCreate">host_setting</param>
    <param name="label">Select a Hostname</param>
    <param name="search">index=metriks type=histogram | stats count by host</param>
    <param name="earliest">-15m</param>
    <param name="searchFieldsToDisplay">
      <list>
        <param name="value">host</param>
        <param name="label">host</param>
      </list>
    </param>

    <module name="ConvertToIntention">
      <param name="settingToConvert">host_setting</param>
      <param name="intention">
        <param name="name">stringreplace</param>
        <param name="arg">
          <param name="host">
            <param name="value">$target$</param>
          </param>
        </param>
      </param>

      <module name="SearchSelectLister">
        <param name="settingToCreate">name_setting</param>
        <param name="label">Select a Metric</param>
        <param name="search">index=metriks type=histogram host=$host$ | stats count by name</param>
        <param name="earliest">-15m</param>
        <param name="applyOuterIntentionsToInternalSearch">True</param>
        <param name="searchFieldsToDisplay">
          <list>
            <param name="value">name</param>
            <param name="label">name</param>
          </list>
        </param>

        <module name="ConvertToIntention">
          <param name="settingToConvert">name_setting</param>
          <param name="intention">
            <param name="name">stringreplace</param>
            <param name="arg">
              <param name="name">
                <param name="value">$target$</param>
              </param>
            </param>
          </param>

          <module name="SubmitButton">
            <param name="label">Search</param>

            <module name="TimeRangePicker">
              <param name="searchWhenChanged">True</param>
              <param name="selected">Last 24 hours</param>

              <module name="HiddenSearch" layoutPanel="panel_row1_col1">
                <param name="search">index=metriks type=histogram host=$host$ name=$name$ | eval _time=time | timechart minspan=5m avg(median)</param>
                <module name="HiddenChartFormatter">
                  <param name="chart">line</param>
                  <param name="legend.placement">none</param>
                  <param name="primaryAxisTitle.text">Time</param>
                  <param name="secondaryAxisTitle.text">Average</param>
                  <module name="JobProgressIndicator">
                    <module name="JSChart">
                      <param name="width">100%</param>
                      <param name="height">350px</param>
                    </module>
                  </module>
                  <module name="ViewRedirectorLink">
                    <param name="viewTarget">flashtimeline</param>
                  </module>
                </module>
              </module>

            </module>
          </module>
        </module>
      </module>
    </module>
  </module>

  <module name="SearchSelectLister" layoutPanel="panel_row1_col2" group="Meters &amp; Counters">
    <param name="settingToCreate">host_setting</param>
    <param name="label">Select a Hostname</param>
    <param name="search">index=metriks five_minute_rate=* | stats count by host</param>
    <param name="earliest">-15m</param>
    <param name="searchFieldsToDisplay">
      <list>
        <param name="value">host</param>
        <param name="label">host</param>
      </list>
    </param>

    <module name="ConvertToIntention">
      <param name="settingToConvert">host_setting</param>
      <param name="intention">
        <param name="name">stringreplace</param>
        <param name="arg">
          <param name="host">
            <param name="value">$target$</param>
          </param>
        </param>
      </param>

      <module name="SearchSelectLister">
        <param name="settingToCreate">name_setting</param>
        <param name="label">Select a Metric</param>
        <param name="search">index=metriks five_minute_rate=* host=$host$ | stats count by name</param>
        <param name="earliest">-15m</param>
        <param name="applyOuterIntentionsToInternalSearch">True</param>
        <param name="searchFieldsToDisplay">
          <list>
            <param name="value">name</param>
            <param name="label">name</param>
          </list>
        </param>

        <module name="ConvertToIntention">
          <param name="settingToConvert">name_setting</param>
          <param name="intention">
            <param name="name">stringreplace</param>
            <param name="arg">
              <param name="name">
                <param name="value">$target$</param>
              </param>
            </param>
          </param>

          <module name="SubmitButton">
            <param name="label">Search</param>

            <module name="TimeRangePicker">
              <param name="searchWhenChanged">True</param>
              <param name="selected">Last 24 hours</param>

              <module name="HiddenSearch" layoutPanel="panel_row1_col2">
                <param name="search">index=metriks five_minute_rate=* host=$host$ name=$name$ | eval _time=time | timechart minspan=5m avg(five_minute_rate)</param>
                <module name="HiddenChartFormatter">
                  <param name="chart">line</param>
                  <param name="legend.placement">none</param>
                  <param name="primaryAxisTitle.text">Time</param>
                  <param name="secondaryAxisTitle.text">Average</param>
                  <module name="JobProgressIndicator">
                    <module name="JSChart">
                      <param name="width">100%</param>
                      <param name="height">350px</param>
                    </module>
                  </module>
                  <module name="ViewRedirectorLink">
                    <param name="viewTarget">flashtimeline</param>
                  </module>
                </module>
              </module>

            </module>
          </module>
        </module>
      </module>
    </module>
  </module>
</view>