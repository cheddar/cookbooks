<view template="dashboard.html" objectMode="SimpleForm">
  <label>OS Metrics</label>
  <module name="AccountBar" layoutPanel="appHeader"/>
  <module name="AppBar" layoutPanel="navigationHeader"/>
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>

  <module name="SearchSelectLister" layoutPanel="panel_row1_col1" group="OS Metrics">
    <param name="settingToCreate">host_setting</param>
    <param name="search">index=metriks | stats count by host</param>
    <param name="earliest">-15m</param>
    <param name="searchFieldsToDisplay">
      <list>
        <param name="value">host</param>
        <param name="label">host</param>
      </list>
    </param>

    <module name="ConvertToIntention">
      <param name="settingToConvert">host_setting</param>
      <param name="intention">
        <param name="name">stringreplace</param>
        <param name="arg">
          <param name="host">
            <param name="value">$target$</param>
          </param>
        </param>
      </param>

      <module name="TimeRangePicker">
        <param name="searchWhenChanged">True</param>
        <param name="selected">Last 24 hours</param>

        <module name="HiddenSearch" layoutPanel="panel_row2_col1" group="Load Average">
          <param name="search">index=metriks host=$host$ name=os.loadavg | eval _time=time | timechart span=1h eval(round(avg(median), 2)) as median</param>
          <module name="HiddenChartFormatter">
            <param name="chart">line</param>
            <param name="charting.seriesColors">[0x423D4F,0x4A6860,0x848F39,0xA2B73C,0xDDCB53,0xC5A32F,0x7D5836,0x963B20,0x7C2626,0x491D37,0x2F254A]</param>
            <param name="charting.legend.masterLegend"></param>
            <param name="primaryAxisTitle.text">Time</param>
            <param name="secondaryAxisTitle.text">Load Average</param>
            <module name="JobProgressIndicator">
              <module name="FlashChart">
                <param name="width">100%</param>
              </module>
            </module>
            <module name="ViewRedirectorLink">
              <param name="viewTarget">flashtimeline</param>
            </module>
          </module>
        </module>

        <module name="HiddenSearch" layoutPanel="panel_row2_col2" group="Disk Usage">
          <param name="search"><![CDATA[index=metriks host=$host$ name=os.disk:*.blocks | eval _time=time | rex field=name "os.disk:(?<name>.*).blocks" | timechart span=1h eval(round(avg(median)*100, 0)) by name]]></param>
          <module name="HiddenChartFormatter">
            <param name="chart">line</param>
            <param name="charting.seriesColors">[0x423D4F,0x4A6860,0x848F39,0xA2B73C,0xDDCB53,0xC5A32F,0x7D5836,0x963B20,0x7C2626,0x491D37,0x2F254A]</param>
            <param name="charting.legend.masterLegend"></param>
            <param name="primaryAxisTitle.text">Time</param>
            <param name="secondaryAxisTitle.text">Percent</param>
            <module name="JobProgressIndicator">
              <module name="FlashChart">
                <param name="width">100%</param>
              </module>
            </module>
            <module name="ViewRedirectorLink">
              <param name="viewTarget">flashtimeline</param>
            </module>
          </module>
        </module>

        <module name="HiddenSearch" layoutPanel="panel_row3_col1" group="CPU Usage">
          <param name="search">index=metriks host=$host$ name=os.cpu:* | eval _time=time | eval name=substr(name, 8) | timechart span=1h eval(round(avg(one_minute_rate)*100, 0)) by name</param>
          <module name="HiddenChartFormatter">
            <param name="chart">area</param>
            <param name="chart.stackMode">stacked</param>
            <param name="charting.seriesColors">[0x423D4F,0x4A6860,0x848F39,0xA2B73C,0xDDCB53,0xC5A32F,0x7D5836,0x963B20,0x7C2626,0x491D37,0x2F254A]</param>
            <param name="charting.legend.masterLegend"></param>
            <param name="primaryAxisTitle.text">Time</param>
            <param name="secondaryAxisTitle.text">Percent</param>
            <module name="JobProgressIndicator">
              <module name="FlashChart">
                <param name="width">100%</param>
              </module>
            </module>
            <module name="ViewRedirectorLink">
              <param name="viewTarget">flashtimeline</param>
            </module>
          </module>
        </module>

        <module name="HiddenSearch" layoutPanel="panel_row3_col2" group="Memory Usage">
          <param name="search">index=metriks host=$host$ name=os.mem:* | eval _time=time | eval name=substr(name, 8) | timechart span=1h eval(round(avg(median)/1024/1024/1024, 3)) by name</param>
          <module name="HiddenChartFormatter">
            <param name="chart">area</param>
            <param name="chart.nullValueMode">connect</param>
            <param name="chart.stackMode">stacked100</param>
            <param name="charting.seriesColors">[0x423D4F,0x4A6860,0x848F39,0xA2B73C,0xDDCB53,0xC5A32F,0x7D5836,0x963B20,0x7C2626,0x491D37,0x2F254A]</param>
            <param name="charting.legend.masterLegend"></param>
            <param name="primaryAxisTitle.text">Time</param>
            <param name="secondaryAxisTitle.text">Percent</param>
            <module name="JobProgressIndicator">
              <module name="FlashChart">
                <param name="width">100%</param>
              </module>
            </module>
            <module name="ViewRedirectorLink">
              <param name="viewTarget">flashtimeline</param>
            </module>
          </module>
        </module>

        <module name="HiddenSearch" layoutPanel="panel_row4_col1" group="Disk Throughput">
          <param name="search"><![CDATA[index=metriks host=$host$ name=os.iostat:* | eval _time=time | rex field=name "os.iostat:(?<name>(?<device>.*)\.(?<rw>.*))" | eval name=device.".".if(rw == "rbytes", "read", "write") | eval five_minute_rate=if(rw == "rbytes", -five_minute_rate, five_minute_rate) | timechart span=1h eval(round(avg(five_minute_rate)/1024/1024, 3)) by name]]></param>
          <module name="HiddenChartFormatter">
            <param name="chart">line</param>
            <param name="charting.seriesColors">[0x423D4F,0x4A6860,0x848F39,0xA2B73C,0xDDCB53,0xC5A32F,0x7D5836,0x963B20,0x7C2626,0x491D37,0x2F254A]</param>
            <param name="charting.legend.masterLegend"></param>
            <param name="primaryAxisTitle.text">Time</param>
            <param name="secondaryAxisTitle.text">MB/s</param>
            <module name="JobProgressIndicator">
              <module name="FlashChart">
                <param name="width">100%</param>
              </module>
            </module>
            <module name="ViewRedirectorLink">
              <param name="viewTarget">flashtimeline</param>
            </module>
          </module>
        </module>

        <module name="HiddenSearch" layoutPanel="panel_row4_col2" group="Network Throughput">
          <param name="search"><![CDATA[index=metriks host=$host$ name=os.net:*bytes | eval _time=time | rex field=name "os.net:(?<name>(?<device>.*)\.(?<rw>.*))" | eval name=device.".".if(rw == "rbytes", "read", "write") | eval five_minute_rate=if(rw == "rbytes", -five_minute_rate, five_minute_rate) | timechart span=1h eval(round(avg(five_minute_rate)*8/1024/1024, 1)) by name]]></param>
          <module name="HiddenChartFormatter">
            <param name="chart">line</param>
            <param name="charting.seriesColors">[0x423D4F,0x4A6860,0x848F39,0xA2B73C,0xDDCB53,0xC5A32F,0x7D5836,0x963B20,0x7C2626,0x491D37,0x2F254A]</param>
            <param name="charting.legend.masterLegend"></param>
            <param name="primaryAxisTitle.text">Time</param>
            <param name="secondaryAxisTitle.text">MBit/s</param>
            <module name="JobProgressIndicator">
              <module name="FlashChart">
                <param name="width">100%</param>
              </module>
            </module>
            <module name="ViewRedirectorLink">
              <param name="viewTarget">flashtimeline</param>
            </module>
          </module>
        </module>


      </module>
    </module>
  </module>
</view>