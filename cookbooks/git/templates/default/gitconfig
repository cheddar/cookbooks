[user]
	email = <%= node[:current_email] %>
	name = <%= node[:current_name] %>
[alias]
	co = checkout
	ci = commit
	cp = cherry-pick
	st = status
	d = diff
	dw = diff --color-words
	dc = diff --cached
	dcw = diff --cached --color-words
	wn = !BRANCH=$(git symbolic-ref HEAD|sed s:refs/heads/::) && git fetch -q origin && git log --reverse --stat -p ${BRANCH}..origin/${BRANCH}
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue(%an)%Creset' --abbrev-commit --date=relative
	log1 = log --pretty=oneline --abbrev-commit --decorate
	eu = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; $EDITOR `f`"
	au = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
[color]
	branch = auto
	diff = false
	grep = auto
	interactive = auto
	showbranch = auto
	status = auto
	ui = auto
[pager]
	diff = colordiff | less
[branch]
	autosetupmerge = true
[push]
	default = tracking
[diff]
	renames = true
[core]
	excludesfile = <%= node[:git][:exfile] %>
<% if node[:git][:github][:user] %>
[github]
	user = <%= node[:git][:github][:user] %>
[hub]
	protocol = https
<% end %>
<% if node[:platform] == "mac_os_x" %>
[credential]
	helper = osxkeychain
<% end %>
<% if solo? and not root? %>
[include]
	path = <%= node[:homedir] %>/.gitconfig.local
<% end %>
