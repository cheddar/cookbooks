# this is the sshd server system-wide configuration file.
# see sshd_config(5) for more information.

# be quiet
LogLevel ERROR

# listen address and protocol version
Port 22
<% if node[:virtualization][:role] == "host" and node[:virtualization][:system] == "linux-vserver" and node[:virtualization][:guests] > 0 %>
ListenAddress 127.0.0.1
ListenAddress ::1
ListenAddress <%= node[:primary_ipaddress] %>
<% if node[:primary_ip6address] %>
ListenAddress <%= node[:primary_ip6address] %>
<% end %>
<% if node[:local_ipaddress] %>
ListenAddress <%= node[:local_ipaddress] %>
<% end %>
<% end %>
Protocol 2

# host keys
HostKey /etc/ssh/ssh_host_rsa_key
HostKey /etc/ssh/ssh_host_dsa_key

# authentication
UsePAM yes
PubkeyAuthentication yes
<% if node.run_state[:users].select do |u| u.include?(:authorized_keys) end.empty? %>
PasswordAuthentication yes
<% else %>
PasswordAuthentication <%= node[:ssh][:server][:password_auth] %>
<% end %>
ChallengeResponseAuthentication <%= node[:ssh][:server][:challange_response_auth] %>
<% if node.run_state[:users].empty? %>
PermitRootLogin yes
<% else %>
PermitRootLogin <%= node[:ssh][:server][:root_login] %>
<% end %>
AuthorizedKeysFile .ssh/authorized_keys
PermitEmptyPasswords no

<%- if node[:ssh][:server][:use_lpk] == "yes" -%>
# ldap public key support
UseLPK yes
LpkLdapConf /etc/ldap.conf
LpkForceTLS yes

<%- end -%>
# forwarding
AllowTcpForwarding yes
GatewayPorts no
X11Forwarding <%= node[:ssh][:server][:x11_forwarding] %>

# pam already prints this stuff
PrintMotd no
PrintLastLog no

# Prevent broken routers from disconnecting the session
ClientAliveInterval 30

# enable sftp support
Subsystem sftp internal-sftp

<% node[:ssh][:server][:matches].sort.each do |name, params| %>
# <%= name %>
Match <%= params.delete(:match) %>
<% params.sort.each do |key, value| %>
	<%= key %> <%= value %>
<% end %>
<% end %>
