name="hadoop-datanode"
command="/opt/hadoop/bin/hadoop"
command_args="--config /opt/hadoop/conf datanode"
command_background="true"
start_stop_daemon_args="--user hadoop --group hadoop"
pidfile="/var/run/hadoop/datanode.pid"

depend() {
    need net
}

pre_start() {
    checkpath -d -m 0755 -o hadoop:hadoop /var/run/hadoop
}
