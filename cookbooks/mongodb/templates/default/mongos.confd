# Mongodb essentials
MONGOS_EXEC="/usr/bin/mongos"
MONGOS_RUN="/run/mongodb"
MONGOS_USER="mongodb"

MONGOS_IP="<%= @bind_ip %>"
MONGOS_PORT="<%= @port %>"

# 1 to 3 comma separated config servers (mandatory)
MONGOS_CONFIGDB="<%= @configdb.join(',') %>"

# Set extra options here, such as disabling the admin web server
MONGOS_OPTIONS="--quiet"
