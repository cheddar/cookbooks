/bin/bash -c '

export LANG=en_US.UTF-8

fqdn=<%= @config[:server_name] %>
hostname=${fqdn/.*}
domainname=${fqdn#*.}

echo "127.0.0.1 ${hostname}.${domainname} ${hostname} localhost" > /etc/hosts
echo ${hostname} > /etc/hostname
sed -i -e "s/^hostname.*/hostname=\"${hostname}\"/" /etc/conf.d/hostname
hostname ${hostname}

emerge -n net-misc/ntp
timedatectl set-local-rtc 0
ntpdate pool.ntp.org

emerge --sync
emerge --nospinner --keep-going=n --noreplace --quiet app-admin/chef

mkdir -p /etc/chef
mkdir -p /var/log/chef

(
cat <<'EOP'
<%= validation_key %>
EOP
) > /tmp/validation.pem
awk NF /tmp/validation.pem > /etc/chef/validation.pem
rm /tmp/validation.pem
chmod 0600 /etc/chef/validation.pem

(
cat <<'EOP'
<%= config_content %>
EOP
) > /etc/chef/client.rb

/usr/bin/chef-client
/usr/bin/chef-client'
